<?xml version="1.0"?>

<!DOCTYPE ROOT SYSTEM "qud2.dtd">
<ROOT>
    <QUD string = "Was ist mit dem Porsche Taycan?">

        <QUD string = "Ab wann ist der neue Taycan wo verfügbar?">

            <QUD string = "Ab wann ist der neue Taycan in Amerika verfügbar?">
                <CON><SEGMENT> Der neue Taycan, der in Amerika </SEGMENT></CON>
                <F><SEGMENT> noch in diesem Jahr  </SEGMENT></F>
                <RES><SEGMENT> und </SEGMENT></RES>
            </QUD>

            <QUD string = "Ab wann ist der neue Taycan in Deutschland verfügbar?">
                <CON><SEGMENT> in Deutschland </SEGMENT></CON>
                <F><SEGMENT> im ersten Quartal des neuen Jahres auf den Markt kommt, </SEGMENT></F>
            </QUD>
        </QUD>

        <!-- DT = Akku -->
        <QUD string = "Was ist die Akkukapazität des Taycan?">
            <F><SEGMENT> kann 93,4 kWh Energie in seinen Akkus bunkern. </SEGMENT></F>
        </QUD>

        <!-- DT = Reichweite -->
        <QUD string = "Was ist mit der Reichweite des Taycan?">
            <RES><SEGMENT> Damit </SEGMENT></RES>
            <F id="1"><SEGMENT> erzielt </SEGMENT></F>
            <CON><SEGMENT> er </SEGMENT></CON>
            <F id="1"><SEGMENT> nach der Norm eine Reichweite von 450 Kilometern </SEGMENT></F>
            <RES><SEGMENT> oder </SEGMENT></RES>
            <F id="2"><SEGMENT> 412 im stärkeren Modell. </SEGMENT></F>
        </QUD>

        <!-- DT = Antrieb -->
        <QUD string = "Was ist mit dem Antrieb?">

            <QUD string = "Welche Leistung suggeriert die Bezeichnung Turbo?">
                <QUD string="Wie nennt Porsche seinen Stromer?">
                    <RES><SEGMENT> Dass </SEGMENT></RES>
                    <CON><SEGMENT> Porsche </SEGMENT></CON>
                    <F id="1"><SEGMENT> seinen ersten reinen Stromer als Turbo </SEGMENT></F>
                    <RES><SEGMENT> oder </SEGMENT></RES>
                    <F id="1"><SEGMENT> Turbo S bezeichnet, </SEGMENT></F>
                </QUD>

                <QUD string = "Wie ist die Bezeichnung Turbo zu bewerten?">
                    <F><SEGMENT> ist schon ein wenig anachronistisch. </SEGMENT></F> <!-- schon- NAI? -->

                    <QUD string = "Warum anachronistisch?">
                        <F id="1"><SEGMENT> Von Turbo ist </SEGMENT></F>
                        <NAI><SEGMENT> natürlich </SEGMENT></NAI>
                        <F id="1"><SEGMENT> weit und breit keine Spur. </SEGMENT></F> <!-- weit und breit gehört zusammen -->
                    </QUD>
                </QUD>
            </QUD>

            <QUD string="Welche Leistung hat der Turbo tatsächlich? (technischen Daten)?">
                <QUD string = "Was für Antrieb?">   <!-- vllt nicht unterordrnen? -->
                    <F id="1"><SEGMENT> Zwei E-Maschinen sitzen an den Achsen,  </SEGMENT></F>
                    <F id="2"><SEGMENT> was Allradantrieb bedeutet. </SEGMENT></F>
                </QUD>

                <QUD string = "Was ist die Leistung beim Turbo S und Turbo?">
                    <QUD string = "Leistung Turbo S?">
                        <CON><SEGMENT> Der Turbo S </SEGMENT></CON>
                        <F id="1"><SEGMENT> bietet 560 kW </SEGMENT></F>
                        <F id="2"><SEGMENT> (761 PS), </SEGMENT></F>
                    </QUD>

                    <QUD string = "Leistung Turbo?">
                        <CON><SEGMENT> der Turbo </SEGMENT></CON>
                        <F id="1"><SEGMENT> muss sich mit 500 kW </SEGMENT></F>
                        <F id="2"><SEGMENT> (680 PS) bescheiden. </SEGMENT></F>
                    </QUD>
                </QUD>

                <QUD string = "Max Drehmoment?">
                    <CON><SEGMENT> Das maximale Drehmoment  </SEGMENT></CON>
                    <F id="1"><SEGMENT> beläuft sich auf 1050 </SEGMENT></F>
                    <RES><SEGMENT> oder </SEGMENT></RES>
                    <F id="2"><SEGMENT> 850 Newtonmeter. </SEGMENT></F>
                </QUD>

                <QUD string = "Beschleunigung?">
                    <QUD string = "Bewertung?">
                        <F><SEGMENT> Beeindruckend </SEGMENT></F>
                    </QUD>
                    <F><SEGMENT> sind die möglichen Beschleunigungswerte: </SEGMENT></F>

                    <QUD string = "Was sind die möglichen Beschleunigungswerte?">
                        <F id="1"><SEGMENT> nur 2,8 (Sekunden vergehen bei vollem Leistungseinsatz, um aus dem Stand auf 100 km/h zu kommen.)</SEGMENT></F>
                        <RES><SEGMENT> oder </SEGMENT></RES>
                        <F id="2"><SEGMENT> 3,2 Sekunden vergehen bei vollem Leistungseinsatz, um aus dem Stand auf 100 km/h zu kommen. </SEGMENT></F>
                    </QUD>
                </QUD>

                <QUD string = "Höchstgeschwindigkeit?">
                    <CON><SEGMENT> Die Höchstgeschwindigkeit </SEGMENT></CON>
                    <F><SEGMENT> beträgt in beiden Fällen 260 km/h. </SEGMENT></F>
                </QUD>
            </QUD>
                    
        </QUD>

        <!-- DT = Batterie/Aufladen -->
        <QUD string = "Was ist mit der Batterie?">

            <QUD string = "Welche elektrische Bordarchitektur (Volt) hat der Taycan?">
                <CON><SEGMENT> Die elektrische Bordarchitektur </SEGMENT></CON>
                <F><SEGMENT> arbeitet mit 800 Volt  </SEGMENT></F>
                <RES><SEGMENT> und </SEGMENT></RES>
                <F><SEGMENT> nicht mit 400 wie sonst üblich. </SEGMENT></F>

                <QUD string = "Was bedeuten 800 statt 400 Volt für das Aufladen?">
                    <CON><SEGMENT> Das </SEGMENT></CON>
                    <F><SEGMENT> ermöglicht bei Gleichstrom (DC) </SEGMENT></F>
    
                    <QUD string = "Wie schnell kann man mit 800 Volt Gleichstrom laden?">
                        <CON><SEGMENT> ein Laden </SEGMENT></CON>
                        <F><SEGMENT> für 100 Kilometer Reichweite in nur fünf Minuten. </SEGMENT></F>
                    </QUD>
                </QUD>
            </QUD>

            <QUD string = "Was verspricht Porsche hinsichtlich der Batterie?">
                <CON><SEGMENT> Porsche verspricht, </SEGMENT></CON>
                <RES><SEGMENT> dass </SEGMENT></RES>
                <F><SEGMENT> von leer auf 80 Prozent der Kapazität nur knapp 23 Minuten vergehen – </SEGMENT></F> <!-- nur NAI? -->

                <QUD string = "Was ist die Bedingung/Voraussetzung für diese Ladegeschwindigkeit?">
                    <F><SEGMENT> bei entsprechender Ladeinfrastruktur mit einer Leistung von 270 kW. </SEGMENT></F>
                </QUD>
            </QUD>

            <QUD string = "Was ist die physischen Größe der Batterie?">
                <CON><SEGMENT> Die Batterie, </SEGMENT></CON>
                <QUD string = "Wie schwer ist die Batterie?">
                    <CON><SEGMENT> die </SEGMENT></CON>
                    <F id="1"><SEGMENT> mit Crash-Schutz </SEGMENT></F>
                    <F id="2"><SEGMENT>630 Kilo wiegt, </SEGMENT></F>
                </QUD>
                <QUD string = "Wieviele Batteriezellen hat die Batterie? / Woraus besteht die Batterie?">
                    <F><SEGMENT> besteht aus 33 mal 12 Zellen. </SEGMENT></F>
                </QUD>
            </QUD>
        </QUD>

        <!-- DT = Angemessenheit des Namens -->
        <QUD string = "Was suggeriert der Name?">

            <CON><SEGMENT> Der Taycan -  der Name </SEGMENT></CON>
            <F><SEGMENT> bedeutet lebendig wie ein Fohlen auf türkisch - </SEGMENT></F>

            <QUD string="Was sagen Fahrzeuggröße und Gepäckraum über die Angemessenheit des Namens?">
                <QUD string = "Was ist mit der Größe des Taycan?">
                    <F id="1"><SEGMENT> ist ein viersitziges </SEGMENT></F>
                    <RES><SEGMENT> und </SEGMENT></RES>
                    <F id="2"><SEGMENT> viertüriges </SEGMENT></F>
                    <F id="3"><SEGMENT> Coupé </SEGMENT></F>
                    <F id="4"><SEGMENT> mit einer Länge von 5,05 Meter. </SEGMENT></F>
                </QUD>
    
                <QUD string = "Wieviel Gepäckraum gibt es?">
                    <F id="1"><SEGMENT> Unter die Heckklappe passen rein rechnerisch 366 Liter Ladegut, </SEGMENT></F>
                    <F id="2"><SEGMENT> vorn ist </SEGMENT></F>
                    <RES><SEGMENT> zudem </SEGMENT></RES><!-- und -->
                    <F id="2"><SEGMENT> ein weiterer kleiner Stauraum mit 81 Liter Fassungsvermögen. </SEGMENT></F>
                </QUD>
            </QUD>
            <!-- im Kontrast zu: -->
            <QUD string = "Was sagt der Luftwiderstandsbeiwert über die Angemessenheit des Namens?">
                <F id="1"><SEGMENT> Rekordverdächtig ist </SEGMENT></F>
                <CON><SEGMENT> der Luftwiderstandsbeiwert </SEGMENT></CON>
                <F id="2"><SEGMENT> von 0,22. </SEGMENT></F>

                <QUD string = "Warum ist das rekordverdächtig?">
                    <F><SEGMENT> Kein Serien-Porsche ist besser. </SEGMENT></F>
                </QUD>
            </QUD>
        </QUD>

        <!-- DT = Innenraum -->
        <QUD string = "Was ist mit dem Innenraum(design/ausstattung)?">
            <CON><SEGMENT> Für den Innenraum </SEGMENT></CON>
            <F id="1"><SEGMENT> gibt es auf Wunsch eine lederfreie Ausstattung, </SEGMENT></F>
            <NAI><SEGMENT> natürlich </SEGMENT></NAI>
            <F id="2"><SEGMENT> alles aufs Modernste eingerichtet </SEGMENT></F>
            <F id="3"><SEGMENT> mit allen gängigen Infotainment- </SEGMENT></F>
            <RES><SEGMENT> und </SEGMENT></RES>
            <F id="4"><SEGMENT> Assistenzsystemen.</SEGMENT></F>

            <QUD string = "Cockpit?">
                <CON><SEGMENT> Das Cockpit </SEGMENT></CON>
                <RES><SEGMENT> selbst </SEGMENT></RES>
                <F id="1"><SEGMENT> ist schalterfrei, </SEGMENT></F>
                <F id="2"><SEGMENT> alles wird per Touchscreen bedient. </SEGMENT></F>
                
                <QUD string = "Display(s)?">
                    <F id="1"><SEGMENT> Möglich sind bis zu drei Displays, </SEGMENT></F>
                    <RES><SEGMENT> dann </SEGMENT></RES>
                    <F id="2"><SEGMENT> hat </SEGMENT></F>
                    <RES><SEGMENT> auch </SEGMENT></RES>
                    <F id="2"><SEGMENT> der Beifahrer sein eigenes. </SEGMENT></F>
                </QUD>
            </QUD>
        </QUD>

        <!-- DT = Motorsound -->
        <QUD string = "Was ist mit Motorlautstärke?">
            <F><SEGMENT> Auf Wunsch gibt es sogar eine Art künstlichen Motorsound. </SEGMENT></F>

            <QUD string = "Was gibt es beim Thema künstlicher Motorsound zu beachten?">
                <F><SEGMENT> Leise in der Stadt dahin Rollen ist aber nicht mehr. </SEGMENT></F>

                <QUD string = "Was ist der Grund dafür?">
                    <F><SEGMENT> Seit dem 1. Juli ist bei neuen E-Autos ein künstliches Geräusch Pflicht, </SEGMENT></F>

                    <QUD string = "Wann gilt diese Pflicht?">
                        <CON><SEGMENT> das </SEGMENT></CON>
                        <F><SEGMENT> bis 20 km/h arbeitet </SEGMENT></F>
                        <QUD string = "Worauf zielt das?">    
                            <F><SEGMENT> um Fußgänger  </SEGMENT></F>
                            <RES><SEGMENT> und </SEGMENT></RES>
                            <F><SEGMENT> Sehbehinderte </SEGMENT></F>
                            <RES><SEGMENT> oder </SEGMENT></RES>
                            <F><SEGMENT> Blinde besser zu schützen. </SEGMENT></F>
                        </QUD>
                    </QUD>
                </QUD>
            </QUD>
        </QUD>

        <!-- DT = Fahrwerk -->
        <QUD string = "Was bietet Porsche in Sachen Fahrwerk?">

            <RES><SEGMENT> Auch </SEGMENT></RES>
            <CON id="1"><SEGMENT> beim Fahrwerk bietet Porsche </SEGMENT></CON>
            <F id="2"><SEGMENT> alles </SEGMENT></F>
            <CON id="1"><SEGMENT> auf </SEGMENT></CON>
            <F id="2"><SEGMENT>  was man im Baukasten hat,  </SEGMENT></F>
            <F id="3"><SEGMENT> 4D-Chassis-Control </SEGMENT></F>
            <RES><SEGMENT> beispielsweise. </SEGMENT></RES> 

            <QUD string = "Was ist mit Luftfederung?">
                <F id="1"><SEGMENT> Die adaptive Luftfederung kann den Wagen um 22 Millimeter absenken </SEGMENT></F>
                <RES><SEGMENT> oder </SEGMENT></RES>
                <F id="2"><SEGMENT> um 20 Millimeter heben,</SEGMENT></F>

                <QUD string = "Wann braucht man das?">
                    <RES><SEGMENT> wenn </SEGMENT></RES>
                    <F><SEGMENT> es Probleme mit dem Bordstein geben könnte. </SEGMENT></F>
                </QUD>
            </QUD>

            <QUD string = "Was ist mit Hinterachslenkung?">
                <CON><SEGMENT> Eine Hinterachslenkung </SEGMENT></CON>
                <F id="1"><SEGMENT> ist optional, </SEGMENT></F>
                <F id="2"><SEGMENT> beim Turbo S ist </SEGMENT></F>
                <CON><SEGMENT> sie </SEGMENT></CON>
                <F id="2"><SEGMENT> Serie. </SEGMENT></F>

                <QUD string = "Was tut Hinterachslenkung?">
                    <CON><SEGMENT> Sie </SEGMENT></CON>
                    <F><SEGMENT> verkürzt den Wendekreis um 60 Zentimeter auf 11,20 Meter.</SEGMENT></F>
                </QUD>
            </QUD>

            <QUD string = "Welche Radgrößen bietet Porsche?">
                <CON><SEGMENT> Die Räder </SEGMENT></CON>
                <F id="1"><SEGMENT> sind 20 </SEGMENT></F>
                <RES><SEGMENT> oder </SEGMENT></RES>
                <F id="2"><SEGMENT> 21-Zöller. </SEGMENT></F>
            </QUD>
        </QUD>

        <!-- DT = E-Mobilität -->
        <QUD string = "Was ist mit der E-Mobilität?">

            <QUD string = "Was ist mit Porsches neuer E-Auto Fabrik?">
                <QUD string = "Wo wird der Taycan gebaut?">
                    <CON><SEGMENT> Gebaut wird der Taycan  </SEGMENT></CON>
                    <F><SEGMENT> in Zuffenhausen im Stammwerk. </SEGMENT></F>
                </QUD>

                <QUD string = "Wie viel investiert Porsche in die neue Fabrik?">
                    <CON><SEGMENT> In die neue Fabrik </SEGMENT></CON>
                    <F><SEGMENT> wurden 700 Millionen Euro investiert. </SEGMENT></F>
                </QUD>

                <QUD string = "Wann wird die neue Fabrik eröffnet?">
                    <CON><SEGMENT> Offizielle Eröffnung </SEGMENT></CON>
                    <F><SEGMENT> ist am kommenden Montag.</SEGMENT></F>
                </QUD>
            </QUD>


            <QUD string = "Was tut der neue Taycan?">
                <CON><SEGMENT> Der neue Taycan </SEGMENT></CON>
                <F><SEGMENT> markiert den Beginn einer großen Elektro-Offensive, </SEGMENT></F>
            </QUD>

            <QUD string = "Was hat Porsche vor?">
                <CON><SEGMENT> Porsche </SEGMENT></CON>
                <F><SEGMENT> will bis 2022 sechs Milliarden Euro in die Elektromobilität investieren. </SEGMENT></F>

                <QUD string = "Wie viele Autos elektrifiziert?">
                    <F><SEGMENT> Bis 2025 soll jeder zweite Porsche elektrifiziert sein. </SEGMENT></F>
                </QUD>
            </QUD>
        </QUD>

        <!-- DT = Preis -->
        <QUD string = "Was ist mit dem Preis?">
            <CON><SEGMENT> Die Preise für den neuen Porsche </SEGMENT></CON>
            <F><SEGMENT> stehen schon fest. </SEGMENT></F>

            <QUD string = "Was kostet der Taycan Turbo?">
                <CON><SEGMENT> Der Turbo </SEGMENT></CON>
                <F><SEGMENT> kostet 152.000 Euro, </SEGMENT></F>
            </QUD>

            <QUD string = "Was kostet der Taycan Turbo S?">
                <QUD string = "Warum kostet der Turbo S mehr als der Turbo (Vergleich zu Turbo)?">
                    <F><SEGMENT> der wesentlich besser ausgestattete </SEGMENT></F>
                </QUD>
                <CON><SEGMENT> Turbo S </SEGMENT></CON>

                <F><SEGMENT> 186.000 Euro. </SEGMENT></F>
            </QUD>

            <QUD string = "Was kosten andere Modelle?">
                <F><SEGMENT> Es kommen noch günstigere, </SEGMENT></F>
                <QUD string = "Warum werden diese anderen Modelle weniger kosten als der Turbo S und der Turbo?">
                    <F><SEGMENT> schwächere </SEGMENT></F>
                </QUD>
                <CON><SEGMENT> Modelle. </SEGMENT></CON>
            </QUD>

            <QUD string = "Wieviele Vorbestellungen gibt es?">
                <F>
                    <NAI><SEGMENT> Dem Vernehmen nach </SEGMENT></NAI>
                    <SEGMENT> gibt es schon 20.000 </SEGMENT>
                </F>
                <CON><SEGMENT> Vorbestellungen. </SEGMENT></CON>
            </QUD>
        </QUD>
    </QUD>
</ROOT>